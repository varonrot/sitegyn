{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Sitegyn Pizza Template â€“ Content Schema",
  "type": "object",
  "required": ["home", "about", "offers", "menu", "services", "contact"],
  "properties": {
    "home": {
      "type": "object",
      "required": ["hero"],
      "properties": {
        "hero": {
          "type": "object",
          "required": ["headline", "subheadline", "primary_cta"],
          "properties": {
            "kicker": { "type": "string" },
            "headline": { "type": "string" },
            "subheadline": { "type": "string" },
            "primary_cta": { "type": "string" },
            "secondary_cta": { "type": "string" },
            "pills": {
              "type": "array",
              "items": { "type": "string" },
              "minItems": 3,
              "maxItems": 3
            }
          }
        }
      }
    },

    "about": {
      "type": "object",
      "required": ["title", "paragraphs"],
      "properties": {
        "title": { "type": "string" },
        "tagline": { "type": "string" },
        "paragraphs": {
          "type": "array",
          "items": { "type": "string" },
          "minItems": 3,
          "maxItems": 3
        },
        "why_badge": { "type": "string" },
        "why_title": { "type": "string" },
        "why_points": {
          "type": "array",
          "items": { "type": "string" },
          "minItems": 3,
          "maxItems": 3
        }
      }
    },

    "offers": {
      "type": "object",
      "required": ["title", "deals"],
      "properties": {
        "title": { "type": "string" },
        "subtitle": { "type": "string" },
        "deals": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["name", "description"],
            "properties": {
              "badge": { "type": "string" },
              "name": { "type": "string" },
              "price_text": { "type": "string" },
              "description": { "type": "string" }
            }
          },
          "minItems": 3,
          "maxItems": 3
        }
      }
    },

    "menu": {
      "type": "object",
      "required": ["title", "pizzas"],
      "properties": {
        "title": { "type": "string" },
        "subtitle": { "type": "string" },
        "pizzas": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["name", "description"],
            "properties": {
              "name": { "type": "string" },
              "tags": { "type": "string" },
              "description": { "type": "string" }
            }
          },
          "minItems": 3,
          "maxItems": 3
        }
      }
    },

    "services": {
      "type": "object",
      "required": ["title", "items"],
      "properties": {
        "title": { "type": "string" },
        "subtitle": { "type": "string" },
        "items": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["title", "description"],
            "properties": {
              "title": { "type": "string" },
              "description": { "type": "string" }
            }
          },
          "minItems": 3,
          "maxItems": 3
        }
      }
    },

    "contact": {
      "type": "object",
      "required": ["title", "phone", "address"],
      "properties": {
        "title": { "type": "string" },
        "subtitle": { "type": "string" },
        "phone": { "type": "string" },
        "address": { "type": "string" },
        "hours_title": { "type": "string" },
        "hours_lines": {
          "type": "array",
          "items": { "type": "string" },
          "minItems": 3,
          "maxItems": 3
        },
        "cta_pills": {
          "type": "array",
          "items": { "type": "string" },
          "minItems": 2,
          "maxItems": 2
        }
      }
    }
  }
}

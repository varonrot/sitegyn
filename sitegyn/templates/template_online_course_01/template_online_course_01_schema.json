{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Online Course Content",
  "type": "object",
  "properties": {
    "home": {
      "type": "object",
      "properties": {
        "hero": {
          "type": "object",
          "properties": {
            "headline": { "type": "string" },
            "subheadline": { "type": "string" },
            "price": { "type": "string" }
          },
          "required": ["headline", "subheadline"]
        }
      },
      "required": ["hero"]
    }
  },
  "required": ["home"]
}

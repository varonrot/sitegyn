{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Online Course Content",
  "type": "object",
  "properties": {
    "home": {
      "type": "object",
      "ui:icon": "fa-house",
      "properties": {
        "hero": {
          "type": "object",
          "ui:icon": "fa-star",
          "properties": {
            "headline": {
              "type": "string",
              "ui:icon": "fa-heading"
            },
            "subheadline": {
              "type": "string",
              "ui:icon": "fa-align-left"
            },
            "price": {
              "type": "string",
              "ui:icon": "fa-tag"
            }
          },
          "required": ["headline", "subheadline"]
        }
      },
      "required": ["hero"]
    }
  },
  "required": ["home"]
}

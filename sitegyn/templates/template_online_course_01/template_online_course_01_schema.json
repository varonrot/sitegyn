{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Online Course Meta Content",
  "type": "object",
  "properties": {
    "course": {
      "type": "object",
      "properties": {
        "meta": {
          "type": "object",
          "properties": {
            "duration": { "type": "string" },
            "lectures": { "type": "string" },
            "video_hours": { "type": "string" },
            "quizzes": { "type": "string" },
            "level": { "type": "string" },
            "lifetime_access": { "type": "string" }
          },
          "required": ["duration", "lectures", "level"]
        },

        "meta_footer": {
          "type": "object",
          "properties": {
            "updated": { "type": "string" },
            "category": { "type": "string" }
          },
          "required": ["updated", "category"]
        }
      },
      "required": ["meta", "meta_footer"]
    }
  },
  "required": ["course"]
}

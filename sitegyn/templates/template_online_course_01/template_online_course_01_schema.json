{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Online Course Hero Content",
  "type": "object",
  "properties": {
    "home": {
      "type": "object",
      "properties": {
        "hero": {
          "type": "object",
          "properties": {
            "title": { "type": "string" },
            "subtitle": { "type": "string" },
            "primary_cta": {
              "type": "object",
              "properties": {
                "text": { "type": "string" },
                "price": { "type": "string" }
              },
              "required": ["text"]
            },
            "secondary_cta": {
              "type": "object",
              "properties": {
                "text": { "type": "string" }
              }
            }
          },
          "required": ["title", "subtitle", "primary_cta"]
        }
      },
      "required": ["hero"]
    }
  },
  "required": ["home"]
}

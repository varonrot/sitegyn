{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Online Course Website Content",
  "type": "object",
  "properties": {
    "home": {
      "type": "object",
      "properties": {
        "hero": {
          "type": "object",
          "properties": {
            "headline": {
              "type": "string",
              "description": "Main hero headline"
            },
            "subheadline": {
              "type": "string",
              "description": "Hero supporting subtitle"
            }
          },
          "required": ["headline", "subheadline"]
        }
      },
      "required": ["hero"]
    }
  },
  "required": ["home"]
}

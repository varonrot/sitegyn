{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Online Course Content",
  "type": "object",
  "properties": {
    "home": {
      "type": "object",
      "ui:icon": "fa-house",
      "properties": {
        "hero": {
          "type": "object",
          "ui:icon": "fa-star",
          "properties": {
            "headline": {
              "type": "string",
              "ui:icon": "fa-heading"
            },
            "subheadline": {
              "type": "string",
              "ui:icon": "fa-align-left"
            }
          },
          "required": ["headline", "subheadline"]
        },

        "features": {
          "type": "object",
          "ui:icon": "fa-list-check",
          "properties": {
            "items": {
              "type": "array",
              "ui:icon": "fa-check-circle",
              "items": {
                "type": "object",
                "properties": {
                  "title": {
                    "type": "string",
                    "ui:icon": "fa-check"
                  },
                  "description": {
                    "type": "string",
                    "ui:icon": "fa-align-left"
                  }
                },
                "required": ["title", "description"]
              }
            }
          },
          "required": ["items"]
        }

      },
      "required": ["hero", "features"]
    }
  },
  "required": ["home"]
}

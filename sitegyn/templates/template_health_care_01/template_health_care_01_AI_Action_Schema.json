{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Health Care Website – AI Actions",
  "type": "object",

  "properties": {
    "home": {
      "type": "object",
      "properties": {
        "hero": {
          "type": "object",
          "label": "Hero – AI",
          "actions": {
            "rewrite_kicker": {
              "label": "Rewrite Kicker",
              "icon": "fa-tag",
              "targets": ["kicker"],
              "mode": "rewrite"
            },
            "rewrite_headline": {
              "label": "Rewrite Headline",
              "icon": "fa-heading",
              "targets": ["headline"],
              "mode": "rewrite"
            },
            "rewrite_subheadline": {
              "label": "Rewrite Subheadline",
              "icon": "fa-align-left",
              "targets": ["subheadline"],
              "mode": "rewrite"
            },
            "improve_cards": {
              "label": "Improve Hero Cards",
              "icon": "fa-id-card-clip",
              "targets": ["cards"],
              "mode": "improve_array"
            },
            "rewrite_ctas": {
              "label": "Rewrite CTAs",
              "icon": "fa-bullhorn",
              "targets": ["primary_cta", "secondary_cta"],
              "mode": "rewrite_multi"
            }
          }
        }
      }
    },

    "about": {
      "type": "object",
      "label": "About – AI",
      "actions": {
        "rewrite_kicker": {
          "label": "Rewrite Kicker",
          "icon": "fa-tag",
          "targets": ["kicker"],
          "mode": "rewrite"
        },
        "rewrite_headline": {
          "label": "Rewrite Title",
          "icon": "fa-heading",
          "targets": ["headline"],
          "mode": "rewrite"
        },
        "rewrite_description": {
          "label": "Rewrite Description",
          "icon": "fa-paragraph",
          "targets": ["description"],
          "mode": "rewrite"
        },
        "improve_points": {
          "label": "Improve Key Points",
          "icon": "fa-list-check",
          "targets": ["points"],
          "mode": "improve_array"
        },
        "rewrite_author": {
          "label": "Rewrite Author Bio",
          "icon": "fa-user-doctor",
          "targets": ["author.name", "author.role"],
          "mode": "rewrite_multi"
        }
      }
    },

    "departments": {
      "type": "object",
      "label": "Departments – AI",
      "actions": {
        "rewrite_headline": {
          "label": "Rewrite Title",
          "icon": "fa-heading",
          "targets": ["headline"],
          "mode": "rewrite"
        },
        "rewrite_description": {
          "label": "Rewrite Description",
          "icon": "fa-align-left",
          "targets": ["description"],
          "mode": "rewrite"
        },
        "improve_items": {
          "label": "Improve Departments",
          "icon": "fa-hospital",
          "targets": ["items"],
          "mode": "improve_array"
        }
      }
    },

    "services": {
      "type": "object",
      "label": "Services – AI",
      "actions": {
        "rewrite_headline": {
          "label": "Rewrite Title",
          "icon": "fa-heading",
          "targets": ["headline"],
          "mode": "rewrite"
        },
        "improve_services": {
          "label": "Improve Service Items",
          "icon": "fa-boxes-stacked",
          "targets": ["items"],
          "mode": "improve_array"
        }
      }
    },

    "testimonials": {
      "type": "object",
      "label": "Testimonials – AI",
      "actions": {
        "rewrite_headline": {
          "label": "Rewrite Title",
          "icon": "fa-heading",
          "targets": ["headline"],
          "mode": "rewrite"
        },
        "rewrite_subheadline": {
          "label": "Rewrite Subtitle",
          "icon": "fa-align-left",
          "targets": ["subheadline"],
          "mode": "rewrite"
        },
        "improve_testimonial": {
          "label": "Improve Testimonial",
          "icon": "fa-quote-left",
          "targets": ["items"],
          "mode": "improve_array"
        }
      }
    },

    "appointment": {
      "type": "object",
      "label": "Appointment – AI",
      "actions": {
        "rewrite_title": {
          "label": "Rewrite Title",
          "icon": "fa-heading",
          "targets": ["title"],
          "mode": "rewrite"
        },
        "rewrite_subtitle": {
          "label": "Rewrite Subtitle",
          "icon": "fa-align-left",
          "targets": ["subtitle"],
          "mode": "rewrite"
        },
        "rewrite_call_to_action": {
          "label": "Rewrite Call Label",
          "icon": "fa-phone-volume",
          "targets": ["call_label"],
          "mode": "rewrite"
        }
      }
    },

    "footer": {
      "type": "object",
      "label": "Footer – AI",
      "actions": {
        "rewrite_brand": {
          "label": "Rewrite Brand Text",
          "icon": "fa-hospital",
          "targets": ["brand.logo", "brand.description"],
          "mode": "rewrite_multi"
        },
        "rewrite_copyright": {
          "label": "Rewrite Copyright",
          "icon": "fa-copyright",
          "targets": ["copyright"],
          "mode": "rewrite"
        }
      }
    }
  }
}

{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Health Care About Section",
  "type": "object",
  "properties": {
    "about": {
      "type": "object",
      "properties": {
        "kicker": { "type": "string" },
        "title": { "type": "string" },
        "description": { "type": "string" },
        "image": { "type": "string" },
        "badge": { "type": "string" },

        "points": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "minItems": 0,
          "maxItems": 6
        },

        "person": {
          "type": "object",
          "properties": {
            "avatar": { "type": "string" },
            "name": { "type": "string" },
            "role": { "type": "string" }
          },
          "required": ["name"]
        },

        "cta": {
          "type": "object",
          "properties": {
            "text": { "type": "string" },
            "href": { "type": "string" }
          }
        }
      },
      "required": ["title", "description"]
    }
  },
  "required": ["about"]
}

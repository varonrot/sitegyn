{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Health Care Website Content",
  "type": "object",
  "properties": {
    "home": {
      "type": "object",
      "properties": {
        "hero": {
          "type": "object",
          "properties": {
            "kicker": { "type": "string" },
            "headline": { "type": "string" },
            "subheadline": { "type": "string" },
            "primary_cta": { "type": "string" },
            "secondary_cta": { "type": "string" },
            "stats": {
              "type": "object",
              "properties": {
                "value": { "type": "string" },
                "label": { "type": "string" }
              },
              "required": ["value", "label"]
            },
            "cards": {
              "type": "array",
              "minItems": 3,
              "maxItems": 3,
              "items": {
                "type": "object",
                "properties": {
                  "title": { "type": "string" },
                  "text": { "type": "string" },
                  "phone": { "type": "string" }
                },
                "required": ["title", "text"]
              }
            }
          },
          "required": ["headline", "subheadline", "primary_cta"]
        }
      },
      "required": ["hero"]
    },

    "about": {
      "type": "object",
      "properties": {
        "kicker": { "type": "string" },
        "headline": { "type": "string" },
        "description": { "type": "string" },
        "media": {
          "type": "object",
          "properties": {
            "title": { "type": "string" },
            "subtitle": { "type": "string" }
          },
          "required": ["title", "subtitle"]
        },
        "points": {
          "type": "array",
          "minItems": 1,
          "maxItems": 6,
          "items": { "type": "string" }
        },
        "author": {
          "type": "object",
          "properties": {
            "name": { "type": "string" },
            "role": { "type": "string" }
          },
          "required": ["name", "role"]
        },
        "cta": { "type": "string" }
      },
      "required": ["headline", "description"]
    },

    "departments": {
      "type": "object",
      "properties": {
        "kicker": { "type": "string" },
        "headline": { "type": "string" },
        "description": { "type": "string" },
        "cta": { "type": "string" },
        "items": {
          "type": "array",
          "minItems": 3,
          "maxItems": 3,
          "items": {
            "type": "object",
            "properties": {
              "title": { "type": "string" }
            },
            "required": ["title"]
          }
        }
      },
      "required": ["headline", "items"]
    },

    "services": {
      "type": "object",
      "properties": {
        "kicker": { "type": "string" },
        "headline": { "type": "string" },
        "items": {
          "type": "array",
          "minItems": 4,
          "maxItems": 4,
          "items": {
            "type": "object",
            "properties": {
              "number": { "type": "string" },
              "title": { "type": "string" },
              "description": { "type": "string" }
            },
            "required": ["number", "title", "description"]
          }
        }
      },
      "required": ["headline", "items"]
    },

    "testimonials": {
      "type": "object",
      "properties": {
        "kicker": { "type": "string" },
        "headline": { "type": "string" },
        "subheadline": { "type": "string" },
        "count": { "type": "string" },
        "items": {
          "type": "array",
          "minItems": 1,
          "maxItems": 1,
          "items": {
            "type": "object",
            "properties": {
              "text": { "type": "string" },
              "rating": { "type": "string" },
              "name": { "type": "string" },
              "role": { "type": "string" }
            },
            "required": ["text", "rating", "name", "role"]
          }
        }
      },
      "required": ["headline", "items", "count"]
    },

"appointment": {
  "type": "object",
  "properties": {
    "pill": { "type": "string" },
    "title": { "type": "string" },
    "subtitle": { "type": "string" },
    "call_label": { "type": "string" },
    "phone": { "type": "string" }
  },
  "required": ["title", "subtitle"]
},
 
"footer": {
  "type": "object",
  "ui:icon": "fa-shield-heart",
  "properties": {
    "brand": {
      "type": "object",
      "ui:icon": "fa-hospital",
      "properties": {
        "logo": {
          "type": "string",
          "ui:icon": "fa-heading"
        },
        "description": {
          "type": "string",
          "ui:icon": "fa-align-left"
        }
      },
      "required": ["logo", "description"]
    },
    "copyright": {
      "type": "string",
      "ui:icon": "fa-copyright"
    }
  },
  "required": ["brand", "copyright"]
}




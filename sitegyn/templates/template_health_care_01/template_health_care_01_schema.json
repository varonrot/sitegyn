{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Health Care Website Content",
  "type": "object",
  "properties": {
    "home": {
      "type": "object",
      "properties": {
        "hero": {
          "type": "object",
          "properties": {
            "kicker": { "type": "string" },
            "headline": { "type": "string" },
            "subheadline": { "type": "string" },
            "primary_cta": { "type": "string" },
            "secondary_cta": { "type": "string" },
            "pills": {
              "type": "array",
              "items": { "type": "string" },
              "minItems": 0,
              "maxItems": 3
            },
            "image": {
              "type": "string",
              "description": "Hero image filename or URL"
            }
          },
          "required": ["headline", "subheadline", "primary_cta"]
        },

        "about": {
          "type": "object",
          "properties": {
            "badge": { "type": "string" },
            "title": { "type": "string" },
            "description": { "type": "string" },
            "points": {
              "type": "array",
              "items": { "type": "string" },
              "minItems": 1,
              "maxItems": 4
            },
            "availability_badge": { "type": "string" },
            "founder_name": { "type": "string" },
            "founder_role": { "type": "string" },
            "cta": { "type": "string" },
            "image": {
              "type": "string",
              "description": "About section image filename or URL"
            }
          },
          "required": ["title", "description"]
        }
      },
      "required": ["hero", "about"]
    }
  },
  "required": ["home"]
}

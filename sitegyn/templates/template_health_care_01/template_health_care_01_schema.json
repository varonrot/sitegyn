{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Health Care Website Content",
  "type": "object",
  "properties": {
    "home": {
      "type": "object",
      "properties": {
        "hero": {
          "type": "object",
          "properties": {
            "kicker": { "type": "string" },
            "headline": { "type": "string" },
            "subheadline": { "type": "string" },

            "primary_cta": { "type": "string" },
            "secondary_cta": { "type": "string" },

            "stats": {
              "type": "object",
              "properties": {
                "value": { "type": "string" },
                "label": { "type": "string" }
              }
            },

            "cards": {
              "type": "object",
              "properties": {
                "card_1": {
                  "type": "object",
                  "properties": {
                    "title": { "type": "string" },
                    "text": { "type": "string" },
                    "phone": { "type": "string" }
                  },
                  "required": ["title", "text"]
                },
                "card_2": {
                  "type": "object",
                  "properties": {
                    "title": { "type": "string" },
                    "text": { "type": "string" }
                  },
                  "required": ["title", "text"]
                },
                "card_3": {
                  "type": "object",
                  "properties": {
                    "title": { "type": "string" },
                    "text": { "type": "string" },
                    "phone": { "type": "string" }
                  },
                  "required": ["title", "text"]
                }
              }
            }
          },
          "required": ["headline", "subheadline", "primary_cta"]
        }
      },
      "required": ["hero"]
    }
  },
  "required": ["home"]
}

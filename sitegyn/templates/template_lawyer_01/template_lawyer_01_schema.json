{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Pizza Website Content (Multi Page)",
  "type": "object",

  "properties": {
    "pages": {
      "type": "object",
      "properties": {
        "home": {
          "type": "array",
          "items": {
            "type": "string",
            "enum": ["hero", "about", "offers", "menu", "services"]
          }
        },
        "contact": {
          "type": "array",
          "items": {
            "type": "string",
            "enum": ["contact"]
          }
        }
      },
      "required": ["home", "contact"]
    },

    "home": {
      "type": "object",
      "properties": {
        "hero": {
          "type": "object",
          "properties": {
            "kicker": { "type": "string" },
            "headline": { "type": "string" },
            "subheadline": { "type": "string" },
            "primary_cta": { "type": "string" },
            "secondary_cta": { "type": "string" },
            "pills": {
              "type": "array",
              "items": { "type": "string" },
              "minItems": 3,
              "maxItems": 3
            }
          },
          "required": ["headline", "subheadline", "primary_cta"]
        }
      },
      "required": ["hero"]
    },

    "about": {
      "type": "object",
      "properties": {
        "title": { "type": "string" },
        "tagline": { "type": "string" },
        "paragraphs": {
          "type": "array",
          "items": { "type": "string" },
          "minItems": 3,
          "maxItems": 3
        },
        "why_badge": { "type": "string" },
        "why_title": { "type": "string" },
        "why_points": {
          "type": "array",
          "items": { "type": "string" },
          "minItems": 3,
          "maxItems": 3
        }
      },
      "required": ["title", "paragraphs"]
    },

    "offers": {
      "type": "object",
      "properties": {
        "title": { "type": "string" },
        "subtitle": { "type": "string" },
        "deals": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "badge": { "type": "string" },
              "name": { "type": "string" },
              "price_text": { "type": "string" },
              "description": { "type": "string" }
            },
            "required": ["name", "description"]
          },
          "minItems": 3,
          "maxItems": 3
        }
      },
      "required": ["title", "deals"]
    },

    "menu": {
      "type": "object",
      "properties": {
        "title": { "type": "string" },
        "subtitle": { "type": "string" },
        "pizzas": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "name": { "type": "string" },
              "tags": { "type": "string" },
              "description": { "type": "string" }
            },
            "required": ["name", "description"]
          },
          "minItems": 3,
          "maxItems": 3
        }
      },
      "required": ["title", "pizzas"]
    },

    "services": {
      "type": "object",
      "properties": {
        "title": { "type": "string" },
        "subtitle": { "type": "string" },
        "items": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "title": { "type": "string" },
              "description": { "type": "string" }
            },
            "required": ["title", "description"]
          },
          "minItems": 3,
          "maxItems": 3
        }
      },
      "required": ["title", "items"]
    },

    "contact": {
      "type": "object",
      "properties": {
        "title": { "type": "string" },
        "subtitle": { "type": "string" },
        "phone": { "type": "string" },
        "address": { "type": "string" },
        "hours_title": { "type": "string" },
        "hours_lines": {
          "type": "array",
          "items": { "type": "string" },
          "minItems": 3,
          "maxItems": 3
        },
        "cta_pills": {
          "type": "array",
          "items": { "type": "string" },
          "minItems": 2,
          "maxItems": 2
        }
      },
      "required": ["title", "phone", "address"]
    }
  },

  "required": [
    "pages",
    "home",
    "about",
    "offers",
    "menu",
    "services",
    "contact"
  ]
}
